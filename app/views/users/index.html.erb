<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table class="table table-hover">
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, user %></td>
        <td><% if user.suspended %>
      		<span class="label label-info">suspended</span>
  			<% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

